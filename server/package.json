{
  "name": "avcore-demo-server",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc",
    "dev": "better-npm-run dev",
    "prod": "better-npm-run prod",
    "pm2": "better-npm-run pm2",
    "postinstall": "pm2 install typescript"
  },
  "betterScripts": {
    "dev": {
      "command": "nodemon -r dotenv/config ./index.ts",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "prod": {
      "command": "ts-node ./index.ts  >/tmp/app.log 2>&1 &",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "pm2": {
      "command": "pm2 start --watch",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "dependencies": {
    "avcore": "git+ssh://git@github.com/anovikov1984/avcore.git",
    "axios": "^0.19.2",
    "better-npm-run": "^0.1.1",
    "config": "^3.3.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/express": "^4.17.7",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/socket.io": "^2.1.10",
    "@types/socket.io-client": "^1.4.33",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-config-airbnb-typescript": "^9.0.0",
    "eslint-plugin-import": "^2.22.0",
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
}
